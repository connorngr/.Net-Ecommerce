<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <div class="col mb-5">
                <div class="card h-100">
                    @foreach (var Product in Model.Products) {
                    <!-- Product image-->
                    <img class="card-img-top" src="~/images/@Product.Img_Url" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <h5 class="card-title">@Product.ProductName</h5>
                        <p class="card-text">
                            <b>Category: </b>@Product.CategoryName<br />
                            <b>Price: </b>@Product.Price
                        </p>
                    </div>
                    <!-- Product actions-->
                    <div id="AddToCart" class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                         <div onclick="add(@Product.Id) class="text-center"><a class="btn btn-outline-dark mt-auto">Add to cart</a></div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        async function add(ProductId) {
            var usernameEl = document.getElementById("AddToCart");
        if(usernameEl==null){
            window.location.href = "/Identity/Account/Login";
          //var username=usernameEl.innerText;
          //  if(username.length<1){
          //      window.location.href="/Identity/Account/Login";
          //  }
        }
            try {
                var response = await fetch(`/Cart/AddItem?ProductId=${ProductId}`);
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                    window.location.href = "#cartCount";
                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>
}

