@model bool


@{
    ViewData["Title"] = "ConfirmPayment";
}


@if (Model == false)
{
    <h1>Unsuccessful purchased</h1>
}
else
{
    <h1>Paid successfully</h1>
    <h2>Confirm Payment</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ConfirmPaymentClient">
                <label class="visually-hidden" for="Search">Search by title</label>
                <div class="form-group">
                    <label class="control-label">Shipping address</label>
                    <input type="text" id="address" name="address" placeholder="Your address" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label class="control-label">Phone number</label>
                    <input type="text" id="number" name="number" placeholder="Your number" class="form-control" required />
                </div>
                <div class="form-group">
                    <label class="control-label">Notes</label>
                    <input type="text" id="notes" name="notes" placeholder="Note for courier" class="form-control" required />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}


