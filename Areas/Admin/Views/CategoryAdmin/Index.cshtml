@model IEnumerable<Category>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" asp-action="Index">Category</a></li>
        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Index</li>
    </ol>
</nav>

<h2>Categories</h2>
<a class="btn btn-primary mb-4" asp-action="Add">New create</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.CategoryName</td>
                <td>
                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.Id">Update</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>