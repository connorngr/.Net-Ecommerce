@model             Product

@{
    ViewData["Title"] = "Add";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Product</a></li>
        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Create</li>
    </ol>
</nav>

<h2>Create</h2>

<hr />
<div class="row">
    <div >
        
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger" enctype="multipart/form-data"></div>
            <div class="form-group col-md-4">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" required/>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Img_Url" class="control-label"></label>
                @* <button type="button" onclick="OpenCkfinder()">Chose image</button> *@
                @* <input type="text" asp-for="Img_Url" class="form-control" id="txtImage" name="Image" /> *@
                <input type="file" asp-for="Img_Url" class="form-control" />
                <span asp-validation-for="Img_Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailProduct" class="control-label"></label>
                <textarea asp-for="DetailProduct" class="form-control" name="txtDetailProduct"></textarea>
                <span asp-validation-for="DetailProduct" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.Categories"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="submit" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts{
    <script>
        CKEDITOR.replace("txtDetailProduct");

        function OpenCkfinder(){
            var finder = new CKFinder();
            finder.selectActionFuntion = SetUrlImage;
            finder.popup();
        }
        function SetUrlImage(fileUrl) {
            $('input[name=Image]').val(fileUrl);
        }
    </script>
}





